{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["esnext"],
        "target": "es2017",
        "moduleResolution": "Node",
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "experimentalDecorators": true,
        "noImplicitReturns": true,
        "allowSyntheticDefaultImports": true,
        "noResolve": false,
        "allowUnreachableCode": false
    },

    "files": ["./node_modules/@types/screeps/index.d.ts"],

    "include": ["./src/**/*.ts"],
    
    "exclude": ["dist"],

    "bundles": {
      "main": {
        "files": [
          "./src/boot/main.ts"
        ]
      }
    }
}